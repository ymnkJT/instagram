<!DOCTYPE html>
<html>
<head>
  <title>Instagram?</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <%= link_to "Instagram?", root_path, class: "navbar-brand" %>
            <ul class="col-xs-6 col-sm-4 nav navbar-nav head_icon">
              <li class="col-xs-4 col-sm-4"><%= link_to "", new_picture_path,
               class: 'glyphicon glyphicon-camera' %></li>

              <% if user_signed_in? %>
                <li class="col-xs-4 col-sm-4"><%= link_to "", edit_user_registration_path,
                 class: 'glyphicon glyphicon-user' %></li>
                <li class="col-xs-4 col-sm-4"><%= link_to "", destroy_user_session_path,
                 class: 'glyphicon glyphicon-log-out', method: :delete %></li>
              <% else %>
                <li class="col-xs-4 col-sm-4"><%= link_to "", new_user_session_path,
                 class: 'glyphicon glyphicon-log-in' %></li>
                <li class="col-xs-4 col-sm-4"><%= link_to "", new_user_registration_path,
                 class: 'glyphicon glyphicon-pencil' %></li>
              <% end %>
            </ul>
          </div>
      </header>
    </div>
  </div>

<%= yield %>

</body>
</html>
