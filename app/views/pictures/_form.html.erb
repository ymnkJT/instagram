<%= form_for(@picture) do |f| %>
  <%= f.error_messages! %>

  <%= f.label      :image %>
  <%= f.text_field :image, class: 'form-control' %>
  <br>
  <%= f.label      :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '共有', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "一覧に戻る", root_path %>