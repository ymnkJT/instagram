<h1>Pictures</h1>

<% @pictures.each do |picture| %>
  <%= picture.image %>
  <%= picture.content %>
  <%= link_to "編集", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %>
  <%= link_to "削除", picture_path(picture.id),
    method: :delete,
    data: { confirm: '本当に削除しますか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
  <br>
<% end %>
